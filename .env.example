# ==============================================
# InkFluence AI - Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# Variables prefixed with VITE_ are exposed to the client

# ---------------------------------------------
# Firebase Configuration (Client-side - Safe to expose)
# ---------------------------------------------
# Get these from Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# ---------------------------------------------
# OpenAI API Key (KEEP SECRET - Server-side only)
# ---------------------------------------------
# Get from https://platform.openai.com/api-keys
# Used in /api/generate-ai-content.js - NOT exposed to client
OPENAI_API_KEY=sk-your_openai_api_key

# WARNING: Never use VITE_OPENAI_API_KEY - this exposes your key to the client!
# The correct setup keeps OpenAI key server-side only

# ---------------------------------------------
# Stripe Configuration
# ---------------------------------------------
# Get from https://dashboard.stripe.com/apikeys

# Client-side (safe to expose)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Server-side (KEEP SECRET)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (from Stripe Dashboard > Products)
STRIPE_PRICE_ID_BASIC=price_xxxxx
STRIPE_PRICE_ID_PRO=price_xxxxx

# ---------------------------------------------
# Resend Email Service (KEEP SECRET)
# ---------------------------------------------
# Get from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key

# Email addresses
CONTACT_EMAIL=hello@inkfluenceai.com
FROM_EMAIL=noreply@inkfluenceai.com

# ---------------------------------------------
# App Configuration
# ---------------------------------------------
# Your production domain (for CORS and redirects)
VITE_APP_URL=https://www.inkfluenceai.com

# Allowed origins for API CORS (comma-separated)
ALLOWED_ORIGINS=https://www.inkfluenceai.com,http://localhost:5173,http://localhost:3000

# ---------------------------------------------
# Google Analytics (Client-side - Optional)
# ---------------------------------------------
# Get from https://analytics.google.com
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ---------------------------------------------
# Firebase Admin SDK (KEEP SECRET - Optional)
# ---------------------------------------------
# Used for server-side Firebase operations
# Download service account key from Firebase Console > Project Settings > Service Accounts
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ---------------------------------------------
# Feature Flags (Optional)
# ---------------------------------------------
VITE_ENABLE_VOICE_INPUT=true
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_PAYMENTS=true

# ---------------------------------------------
# Rate Limiting Configuration (Optional)
# ---------------------------------------------
# Max AI generations per user per day by tier
AI_RATE_LIMIT_FREE_TIER=10
AI_RATE_LIMIT_BASIC_TIER=100
AI_RATE_LIMIT_PRO_TIER=1000

# ---------------------------------------------
# Development Mode
# ---------------------------------------------
NODE_ENV=development
